{
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "standard",
    "promise",
    "react"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2
  },
  "env": {
    "browser": true,
    "node": true
  }
}
